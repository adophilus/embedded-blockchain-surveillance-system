{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "embedded-blockchain-surveillance-system",
	"version": "1.0.0",
	"description": "A blockchain-based surveillance system that makes use of IoT devices",
	"scripts": {
		"dev": "nx run-many -t dev --parallel 9",
		"build": "nx run-many -t build",
		"build:core": "nx run-many -t build -p @embedded-blockchain-surveillance-system/core",
		"build:server": "./scripts/build-server.sh"
	},
	"keywords": [
		"blockchain",
		"surveillance",
		"ethereum",
		"solidity"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@t3-oss/env-core": "^0.12.0",
		"next": "~15.2.4",
		"true-myth": "^7.4.0",
		"tsx": "^4.20.2",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@nx/next": "20.8.0",
		"@nx/vite": "20.8.0",
		"@nx/web": "20.8.0",
		"@vitest/ui": "^3.2.3",
		"jiti": "2.4.2",
		"nx": "20.8.0",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.2.3"
	},
	"packageManager": "pnpm@10.10.0"
}
